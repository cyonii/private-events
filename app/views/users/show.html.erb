<div class="mt-5">
  <h1 class="fw-bold fs-5 text-primary"><%= @user.name %>'s Events</h1>
</div>

<div class="row">
  <div class="col-md-9 mb-5">
    <div class="row">
      <% for event in @created_events %>
      <div class="col-sm-6 col-lg-4">
        <%= render 'events/event_card', :event => event %>
      </div>
      <% end %>
    </div>
  </div>

  <div class="col-md-3">
    <h5 class="fw-bold">Invitations</h5>

    <%= render 'invitations' %>
  </div>
</div>
